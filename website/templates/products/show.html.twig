{% extends 'base.html.twig' %}

{% block title %}Products{% endblock %}

{% block content %}
    <h1>Products</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>ProductId</th>
                <td>{{ product.productId }}</td>
            </tr>
            <tr>
                <th>ProductName</th>
                <td>{{ product.productName }}</td>
            </tr>
            <tr>
                <th>ProductManDate</th>
                <td>{{ product.productManDate ? product.productManDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>ProductExpDate</th>
                <td>{{ product.productExpDate ? product.productExpDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>ProductBrand</th>
                <td>{{ product.productBrand.brandName }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('products_index') }}">back to list</a>

    <a href="{{ path('products_edit', {'productId': product.productId}) }}">edit</a>

    {{ include('products/_delete_form.html.twig') }}
{% endblock  content %}
