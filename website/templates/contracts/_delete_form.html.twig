<form method="post" action="{{ path('contracts_delete', {'contractId': contract.contractId}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ contract.contractId) }}">
    <button class="btn">Delete</button>
</form>
