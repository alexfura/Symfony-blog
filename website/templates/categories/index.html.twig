{% extends 'base.html.twig' %}

{% block title %}Categories index{% endblock %}

{% block content %}
    <h1>Categories index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>CategoryId</th>
                <th>CategoryName</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.categoryId }}</td>
                <td>{{ category.categoryName }}</td>
                <td>
                    <a href="{{ path('categories_show', {'categoryId': category.categoryId}) }}">show</a>
                    <a href="{{ path('categories_edit', {'categoryId': category.categoryId}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('categories_new') }}">Create new</a>
{% endblock %}
