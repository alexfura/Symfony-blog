<form method="post" action="{{ path('suppliers_delete', {'supplierId': supplier.supplierId}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ supplier.supplierId) }}">
    <button class="btn">Delete</button>
</form>
